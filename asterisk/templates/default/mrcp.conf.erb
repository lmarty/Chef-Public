[general]
default-asr-profile = lumenvox
default-tts-profile = lumenvox
; UniMRCP logging level to appear in Asterisk logs.  Options are:
; EMERGENCY|ALERT|CRITICAL|ERROR|WARNING|NOTICE|INFO|DEBUG -->
log-level = DEBUG
max-connection-count = 100
offer-new-connection = 1
; rx-buffer-size = 1024
; tx-buffer-size = 1024
; request-timeout = 60

[lumenvox]
; MRCP settings
version = 2
;
; SIP settings
server-ip = <%= node['asterisk']['unimrcp']['server_ip'] %>
server-port = <%= node['asterisk']['unimrcp']['server_port'] %>
; server-username = test
force-destination = 1
; SIP user agent
client-ip = <%= node['asterisk']['unimrcp']['client_ip'] %>
client-port = <%= node['asterisk']['unimrcp']['client_port'] %>
sip-transport = udp
; ua-name = Asterisk
; sdp-origin = Asterisk
;
; RTP factory
rtp-ip = <%= node['asterisk']['unimrcp']['rtp_ip'] %>
rtp-port-min = <%= node['asterisk']['unimrcp']['rtp_port_min'] %>
rtp-port-max = <%= node['asterisk']['unimrcp']['rtp_port_max'] %>
;
; Jitter buffer settings
playout-delay = 50
; min-playout-delay = 20
max-playout-delay = 200
; RTP settings
ptime = 20
codecs = PCMU PCMA L16/96/8000 telephone-event/101/8000
; RTCP settings
rtcp = 0
rtcp-bye = 2
rtcp-tx-interval = 5000
rtcp-rx-resolution = 1000
